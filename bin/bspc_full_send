#!/usr/bin/env bash
if [[ $# -lt 4 ]]; then
    echo "Usage: $(basename "$0") mon_src mon_dst src_start src_end [dst_start]"
    exit
fi

# Pull out args
MS=${1}
MD=${2}
DS=${5:-1}

# Throw all the root nodes to the new desktops
# I'm *sure* there's a much better way to do this
for i in $(seq "$3" "$4"); do
    bspc desktop -f "^${MD}:^${DS}"
    bspc desktop -f "^${MS}:^${i}"
    bspc node "@$(bspc query -D -d focused):/" -m "^${MD}"
    DS=$((DS + 1))
done
