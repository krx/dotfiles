#!/usr/bin/env bash

PATH='org.gnome.desktop.peripherals.touchpad'
KEY='send-events'

case "$(/usr/bin/gsettings get $PATH $KEY)" in
    "'enabled'") TOGGLE=disabled ;;
    *) TOGGLE=enabled ;;
esac

/usr/bin/gsettings set "$PATH" "$KEY" "$TOGGLE"
/usr/bin/notify-send 'Touchpad' "${TOGGLE^}" -i /usr/share/icons/Numix/64/devices/input-touchpad.svg -t 3000
